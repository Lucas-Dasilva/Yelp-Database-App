<Window x:Class="Milestone1.TipsDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="TipsDetail" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="tipsGrid" HorizontalAlignment="Left" Height="283" FontSize="14" Margin="20,10,0,0" VerticalAlignment="Top" Width="741"/>
        <Button x:Name="addTipButton" Content="Add Tip" HorizontalAlignment="Left" Margin="686,337,0,0" VerticalAlignment="Top" Width="75" Click="addTipButton_Click"/>
        <TextBox x:Name="userInput" HorizontalAlignment="Left" Height="49" Margin="42,321,0,0" TextWrapping="Wrap" Text="Enter a new Tip!" VerticalAlignment="Top" Width="630" TextChanged="userInput_TextChanged"/>
    </Grid>
</Window>
