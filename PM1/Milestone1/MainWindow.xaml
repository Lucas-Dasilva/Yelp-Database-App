<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="Yelp App" Height="450" Width="800">
    <Grid>
        <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" FontSize="14" Margin="128,46,0,0" VerticalAlignment="Top"/>
        <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" FontSize="14" Margin="128,93,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="stateList" HorizontalAlignment="Left" Margin="188,50,0,0" FontSize="14" VerticalAlignment="Top" Width="299" SelectionChanged="stateList_SelectionChanged"/>
        <ComboBox x:Name="cityList" HorizontalAlignment="Left" Margin="188,97,0,0" FontSize="14" VerticalAlignment="Top" Width="299" SelectionChanged="cityList_SelectionChanged"/>
        <DataGrid x:Name="businessGrid" HorizontalAlignment="Left" Height="230" FontSize="14" Margin="128,164,0,0" VerticalAlignment="Top" Width="545" SelectionChanged="businessGrid_SelectionChanged"/>

    </Grid>
</Window>
